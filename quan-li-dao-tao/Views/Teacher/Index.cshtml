@model quan_li_dao_tao.Models.teacher

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
    </div>
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Thông tin cá nhân</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("UpdateTeacher", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @if (Model.image == null)
                                {
                                    <img src="~/assets/img/avatar.jpg" width="150" style="border-radius: 5px">
                                }
                                else
                                {
                                    <img src="~/assets/img/teacher/@Model.image" width="150" style="border-radius: 5px">
                                }
                                <br />

                                <div class="form-group" style="display:flex;">
                                    <label for="exampleInputEmail1" style="margin-top:8px;">ID: </label>
                                    @Html.TextBoxFor(m => m.teacher_id, new { @class = "form-control", @placeholder = "Mã giảng viên", @readonly = "readonly", @style = "border:none; background-color:white;" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Chọn ảnh</label>
                                    <input type="file" name="file" class="form-control" accept=".jpg, .jpeg, .png">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Họ tên</label>
                                        @Html.TextBoxFor(m => m.teacher_name, new { @class = "form-control", @placeholder = "Họ tên" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Khoa giảng dạy</label>
                                        @Html.DropDownListFor(m => m.faculty_id, ViewBag.Faculty as SelectList, "-- Chọn khoa --", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Giới tính</label>
                                        @Html.TextBoxFor(m => m.gender, new { @class = "form-control", @placeholder = "Giới tính" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngày sinh</label>
                                        @Html.TextBoxFor(m => m.birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Điện thoại</label>
                                        @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control", @placeholder = "Điện thoại" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Địa chỉ</label>
                                        @Html.TextBoxFor(m => m.address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
                </div>
            }
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- /.content-wrapper -->
